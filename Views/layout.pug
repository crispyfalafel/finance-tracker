            #navbarTogglerDemo01.collapse.navbar-collapse
                if loggedIn
                    ul#ul-left.navbar-nav.me-auto.mt-2
                        li.nav-item
                            a.nav-link(href="/profile") Profile
                        li.nav-item
                            a.nav-link(href="/manage") Manage Goals
                        li.nav-item
                            a.nav-link(href="/faq") FAQ

                    ul#ul-right.navbar-nav.ml-3.mt-2
                        li.nav-item
                            a.nav-link(href="/logout") Log Out
                else
                    ul#ul-left.navbar-nav.me-auto.mt-2
                        li.nav-item
                            a.nav-link(href="/faq") FAQ

                    ul#ul-right.navbar-nav.ml-3.mt-2
                            li.nav-item
                                a.nav-link(href="/login") Log In
                            li.nav-item
                                a.nav-link(href="/register") Register
        main
            block mainbody