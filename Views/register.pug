extends layout

block styles
    include ../Public/stylesheets/login.css

block mainbody
    #login
        h1 Register
        if error
            p.error #{error}
        form(action="/register", method="post")
            .form-group
                input.form-control(type="text", name="username", placeholder="Username" required)
            .form-group
                input.form-control(type="password", name="password", placeholder="Password" required)
            .form-group
                input.form-control(type="password", name="confirmPassword", placeholder="Confirm Password" required)
            button.btn.btn-primary(type="submit") Register

